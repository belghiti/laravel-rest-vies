{
  "name": "belghiti/laravel-rest-vies",
  "description": "Laravel integration for belghiti/vies-client (Belghiti\\Vies).",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Belghiti\\Vies\\Laravel\\": "src/"
    }
  },
  "require": {
    "php": ">=8.2",
    "illuminate/support": "^11.0|^12.0",
    "belghiti/vies-client": "^0.1",
    "guzzlehttp/guzzle": "^7.9",
    "guzzlehttp/psr7": "^2.6"
  },
  "require-dev": {
    "pestphp/pest": "^3.0|^4.0",
    "orchestra/testbench": "^9.0|^10.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Belghiti\\Vies\\Laravel\\ViesServiceProvider"
      ],
      "aliases": {
        "Vies": "Belghiti\\Vies\\Laravel\\ViesFacade"
      }
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
